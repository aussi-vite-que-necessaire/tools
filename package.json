{
  "name": "tools-api",
  "version": "1.0.0",
  "description": "Micro-Monolithe backend API for n8n workflows - PDF manipulation and web scraping utilities",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "vitest run tests/e2e",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "hono",
    "puppeteer",
    "pdf",
    "scraper",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.19.10",
    "archiver": "^7.0.1",
    "hono": "^4.6.11",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.32.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.12.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
